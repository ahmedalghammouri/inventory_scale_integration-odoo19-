<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend truck weighing form with sales fields only -->
    <record id="truck_weighing_view_form_sale" model="ir.ui.view">
        <field name="name">truck.weighing.form.sale</field>
        <field name="model">truck.weighing</field>
        <field name="inherit_id" ref="inventory_scale_integration_purchase.truck_weighing_view_form_purchase"/>
        <field name="arch" type="xml">
            <!-- Add Update Inventory button for sales operations -->
            <xpath expr="//button[@name='action_update_inventory']" position="attributes">
                <attribute name="invisible">state != 'tare' or not picking_id or operation_type != 'outgoing'</attribute>
            </xpath>
            <!-- Add Sale Order button -->
            <xpath expr="//button[@name='action_view_purchase_order']" position="after">
                <button name="action_view_sale_order" type="object" class="oe_stat_button" icon="fa-shopping-bag"
                        invisible="not sale_order_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Sale Order</span>
                    </div>
                </button>
            </xpath>
            <!-- Add Sales fields after Purchase group -->
            <xpath expr="//field[@name='purchase_line_id']/.." position="after">
                <group string="Sales &amp; Deliveries" invisible="operation_type != 'outgoing'">
                    <field name="sale_order_id" domain="[('partner_id', '=', partner_id), ('state', 'in', ['sale', 'done']), ('order_line.product_id.is_weighable', '=', True)]"/>
                    <field name="sale_line_id" domain="[('order_id', '=', sale_order_id), ('product_id.is_weighable', '=', True)]"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>